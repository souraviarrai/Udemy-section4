
<%= link_to "SignUp", signup_path %>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Creator</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody>
  <% @articles.each do |article| %>

    <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td>by <%= article.user.username if article.user %></td>
      <td>

        <%= link_to "Show", article_path(article) %>
        <%= link_to "Edit", edit_article_path(article) %>

        <%= link_to "Delete", article_path(article), data:{
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        }%></td>

    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'Create Article', new_article_path %>